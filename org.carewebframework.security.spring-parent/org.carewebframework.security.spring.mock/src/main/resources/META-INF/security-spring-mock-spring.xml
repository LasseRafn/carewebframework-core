<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:cwf="http://www.carewebframework.org/schema/spring" 
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.carewebframework.org/schema/spring 
		http://www.carewebframework.org/schema/spring/spring-extensions.xsd">

	<beans profile="root">

		<!-- Service for reading and writing persisted properties. -->
		<bean id="propertyService" class="org.carewebframework.api.property.mock.MockPropertyService" />

		<bean id="securityDomain" class="org.carewebframework.api.security.mock.MockSecurityDomain" 
			cwf:override="ignore">
			<constructor-arg value="${mock.domainid}" />
			<constructor-arg value="${mock.domainname}" />
		</bean>
		
		<bean id="securityService" class="org.carewebframework.security.spring.mock.MockSecurityService">
			<property name="logoutTarget" value="${org.carewebframework.security.logout.url}" />
			<property name="securityDomain" ref="securityDomain" />
		</bean>

		<bean id="mockUser" class="org.carewebframework.api.security.mock.MockUser" 
			cwf:override="ignore">
			<constructor-arg value="${mock.userid}" />
			<constructor-arg value="${mock.fullname}" />
			<constructor-arg value="${mock.username}" />
			<constructor-arg ref="securityDomain" />
		</bean>
		
		<bean id="securityAuthenticationProvider" class="org.carewebframework.security.spring.mock.MockAuthenticationProvider">
			<property name="mockAuthorities" value="${mock.authorities:}" />
			<property name="mockUser" ref="mockUser" />
		</bean>
	
		<bean id="securityLoginPaneController" class="org.carewebframework.security.spring.controller.LoginPaneController"
			scope="prototype" cwf:override="always">
			<property name="securityService" ref="securityService" />
			<property name="defaultUsername" value="${mock.username}" />
			<property name="defaultPassword" value="${mock.password}" />
			<property name="autoLogin" value="${mock.autologin}" />
		</bean>

	</beans>

</beans>
