<zk>
	<grid name="grid" sclass="cwf-grid-nohover" oddRowSclass="none" sizedByContent="true"
		width="350px" style="border-radius:6px">
		<columns>
			<column hflex="10" />
			<column hflex="6" />
			<column hflex="4" align="center" />
		</columns>
		<rows>
			<row>
				<datebox name="datebox" hflex="1" />
				<timebox name="timebox" hflex="1" />
				<button name="btnOK" hflex="1"
					label="${@msg.cwf.datetime.btn.ok.label}"
					zclass="btn" sclass="btn-sm btn-success" />
			</row>
			<row>
				<a name="btnToday"
					label="${@msg.cwf.datetime.btn.today.label}" />
				<div width="100%">
					<a name="btnNow"
						label="${@msg.cwf.datetime.btn.now.label}" />
					<space hflex="1" />
					<a name="btnTimeClear"
						label="${@msg.cwf.datetime.btn.clear.label}" />
				</div>
				<button name="btnCancel" hflex="1"
					label="${@msg.cwf.datetime.btn.cancel.label}"
					zclass="btn" sclass="btn-sm btn-danger" />
			</row>
		</rows>
	</grid>
</zk>