<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin id="managementSessionTracker" name="Session Tracker"
			url="~./org/carewebframework/ui/managementsupport/sessionTracker.zul">
			<cwp:security requiresAll="false">
				<!--  <cwp:authority name="PRIV_MONITOR_SYSTEM" /> -->
			</cwp:security>
		</cwp:plugin>

		<cwp:plugin id="managementFileTailer" name="Log File Tailer"
			url="~./org/carewebframework/ui/managementsupport/fileTailer.zul">
			<cwp:security requiresAll="false">
				<!--  <cwp:authority name="PRIV_MONITOR_SYSTEM" /> -->
			</cwp:security>
		</cwp:plugin>

	</beans>

	<beans profile="desktop">

		<!-- Controllers -->
		<bean id="managementSessionTrackerController"
			class="org.carewebframework.ui.managementsupport.SessionTrackerController"
			scope="prototype">
			<property name="sessionTrackerRowRenderer">
				<bean class="org.carewebframework.ui.managementsupport.SessionTrackerRowRenderer" />
			</property>
		</bean>

		<bean id="managementFileTailerController"
			class="org.carewebframework.ui.managementsupport.FileTailerController"
			scope="prototype">
			<property name="logManager" ref="logManager" />
		</bean>

	</beans>
</beans>
