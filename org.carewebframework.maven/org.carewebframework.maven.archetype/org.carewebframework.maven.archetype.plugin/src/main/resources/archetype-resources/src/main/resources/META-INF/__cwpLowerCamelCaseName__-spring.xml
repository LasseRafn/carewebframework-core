#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:cwp="http://www.carewebframework.org/schema/plugin"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
		http://www.carewebframework.org/schema/plugin
		http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

<!-- This profile is processed during web server startup -->

	<beans profile="root">
		
		<!-- This is the sample definition for a CareWeb plugin -->
		<cwp:plugin id="${cwpLowerCamelCaseName}" name="${cwpName}" 
			url="~./${packageInPathFormat}/${cwpLowerCamelCaseName}.zul">
			<cwp:resource>
				<cwp:button-resource caption="${symbol_dollar}{labels.${cwpLowerCaseName}.button.caption}" 
					action='zscript:Messagebox.show("${symbol_dollar}{labels.${cwpLowerCaseName}.button.click.msg}");'/>
				<cwp:help-resource module="${cwpLowerCaseName}Help"/>
				<cwp:menu-resource path="${cwpCamelCaseName}${symbol_escape}Click Me" 
					action='zscript:Messagebox.show("${symbol_dollar}{labels.${cwpLowerCaseName}.menu.click.msg}");'/>
				<cwp:property-resource group="plugin${cwpCamelCaseName}PropGroupName"/>
			</cwp:resource>
			<!-- You may specify plugin level security constraints here:
			<cwp:security requiresAll="false">
				<cwp:privilege name="PRIV_CLINICAL_PRIVILEGED_DATA_HIV_OR_AIDS"/>
				<cwp:privilege name="PRIV_CLINICAL_PRIVILEGED_DATA_PSYCHIATRIC"/>
			</cwp:security>
			-->
		</cwp:plugin>
		
	</beans>
	
<!-- This profile is processed for each managed desktop. -->

	<beans profile="desktop">

		<bean id="${cwpLowerCaseName}Controller" 
			class="${package}.controller.${cwpCamelCaseName}Controller" 
			scope="prototype"/>
	
	</beans>
</beans>
