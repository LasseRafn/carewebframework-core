<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul 
		http://www.zkoss.org/2005/zul/zul.xsd">

	<vlayout apply="${cwfFileTailerController}" vflex="1">
		<hlayout sclass="z-toolbar">
			<combobox name="cboLogFiles" readonly="true" hflex="1" />
			<span style="float:right">
				<button name="btnToggle" disabled="true"
					label="${labels.cwf.filetailer.btn.toggle.on.label}" />
				<button name="btnClear"
					label="${labels.cwf.filetailer.btn.clear.label}" />
			</span>
		</hlayout>
		
		<label name="lblMessage" style="color: red;font-weight: bold;"
			visible="false" />
			
		<textbox name="txtOutput" hflex="1" vflex="1" multiline="true"
			readonly="true" style="border-top:1px solid gray"/>
			
		<timer name="timer" running="false" />
	</vlayout>

</zk>