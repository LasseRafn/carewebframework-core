<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd">

	<beans profile="desktop">

		<bean id="chatService" class="org.carewebframework.plugin.chat.ChatService"
			init-method="init" destroy-method="destroy">
			<constructor-arg ref="eventManager" />
		</bean>

		<bean id="chatSessionController" class="org.carewebframework.plugin.chat.SessionController"
			scope="prototype">
			<property name="chatService" ref="chatService" />
		</bean>

		<bean id="chatInviteController" class="org.carewebframework.plugin.chat.InviteController"
			scope="prototype">
			<property name="chatService" ref="chatService" />
		</bean>

	</beans>

</beans>