<window xmlns:c="client" name="win" border="none" height="80%"
	mold="bootstrap" use="org.carewebframework.help.viewer.HelpViewer">
	<borderlayout>
		<west size="33%" splittable="true">
			<div height="100%" width="100%">
				<tabbox name="tbxNavigator" height="100%"
					visible="false">
					<tabs name="tbViews" />
					<tabpanels name="tpViews" />
				</tabbox>
				<label name="lblLoading"
					sclass="z-toolbar cwf-help-viewer-loading" value="Loading..." />
			</div>
		</west>
		<center>
			<div width="100%" height="100%">
				<toolbar sclass="cwf-help-viewer-navbar">
					<toolbarbutton name="btnPrevious" zclass="btn"
						sclass="btn-sm btn-default"
						iconSclass="glyphicon glyphicon-chevron-left"
						tooltiptext="${@msg.cwf.help.viewer.btn.previous.hint}" />
					<toolbarbutton name="btnNext" zclass="btn"
						sclass="btn-sm btn-default"
						iconSclass="glyphicon glyphicon-chevron-right"
						tooltiptext="${@msg.cwf.help.viewer.btn.next.hint}" />
					<space />
					<toolbarbutton name="btnOpen" zclass="btn"
						sclass="btn-sm btn-default"
						iconSclass="glyphicon glyphicon-new-window"
						tooltiptext="${@msg.cwf.help.viewer.btn.open.hint}" />
					<toolbarbutton name="btnPrint" zclass="btn"
						sclass="btn-sm btn-default" iconSclass="glyphicon glyphicon-print"
						tooltiptext="${@msg.cwf.help.viewer.btn.print.hint}"
						c:onClick="jq(this.$f('iframe')).get(0).contentWindow.print();" />
				</toolbar>
				<iframe xmlns:ca="client/attribute" name="iframe" name="help_frame" 
					vflex="1" width="100%" ca:onload="zk.Widget.$(event.target.id).fire('onURLChange', this.src, {toServer:true})">
				</iframe>
			</div>
		</center>
	</borderlayout>
	<style>
		.cwf-help-viewer-loading {
			font-size: 1.25em;
			padding-top: 40px;
			height: 100%;
			text-align: center		}
		
		.cwf-help-viewer-navbar .glyphicon {
			font-size: large;
			color: green;
		}
	</style>
</window>
