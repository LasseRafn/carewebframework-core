<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.carewebframework.org/schema/plugin
		http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">
		<!-- Builds a lucene index for searching help content. -->
		<bean id="helpSearchService" class="org.carewebframework.help.HelpSearchService"
			factory-method="getInstance" init-method="init" destroy-method="destroy">
			<property name="indexDirectoryPath" value="${org.carewebframework.help.index.dir:}" />
		</bean>
		
		<!-- Represents a registry of all known help modules. -->
		<bean id="helpRegistry" class="org.carewebframework.help.HelpModuleRegistry"
			factory-method="getInstance">
			<property name="service" ref="helpSearchService" />
		</bean>

		<!-- Set Help Subsystem Properties -->
		<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
			<property name="staticMethod" value="org.carewebframework.help.HelpUtil.setEmbeddedMode" />
			<property name="arguments" value="${org.carewebframework.help.viewer.embedded:false}" />
		</bean>
		
	</beans>
</beans>