<%@ taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" %>

.cwf-wonderbar-item {
	font-size: 12px;
}

.cwf-wonderbar-item a {
	text-decoration: none;
	display: block;
	padding: .2em .4em;
	line-height: 1.5;
	zoom: 1;
}

.cwf-wonderbar-item a.ui-state-focus {
    border: 1px solid #79b7e7;
    background: #d0e5f5;
    font-weight: bold;
    color: #1d5987;
}

.cwf-wonderbar-item-numbered {
    color: #666666;
    padding-right: 3px;
    font-weight: 300;
    font-size: 12px;
    text-align: right;
}

.cwf-wonderbar-item-category {
	float: right;
	color: #bbbbbb;
	font-size: 0.8em;
	font-style: italic;
	padding-right: 5px;
	display:inline-block;
}

.cwf-wonderbar-item-last {
	border-bottom: thin solid lightgrey;
	list-style-type: none;
	margin-bottom: 0;
	padding: 5px;
}

.cwf-wonderbar-item-first {
}

.cwf-wonderbar-item-more {
	background: #dddddd;
	font-size: 12px;
	font-weight: bold;
	border-top: 1px solid gray;
}
